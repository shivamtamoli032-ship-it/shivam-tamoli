  <script>
    document.getElementById('year').innerText = new Date().getFullYear();
    function scrollToId(id){document.getElementById(id).scrollIntoView({behavior:'smooth'});}
    function validatePhone(p){return /^\d{10}$/.test(p.replace(/\s|\+/g,''));}

    function handleOrder(e){
      e.preventDefault();
      const name=document.getElementById('name').value.trim();
      const phone=document.getElementById('phone').value.trim();
      const address=document.getElementById('address').value.trim();
      const plan=document.getElementById('plan').value;
      const date=document.getElementById('date').value;
      if(!validatePhone(phone)){
        showResult('कृपया सही 10 digit फोन नंबर डालें','red');
        return false;
      }
      const order={name,phone,address,plan,date,created:new Date().toISOString()};
      const orders=JSON.parse(localStorage.getItem('htc_orders')||'[]');
      orders.push(order);
      localStorage.setItem('htc_orders',JSON.stringify(orders));
      showResult('Order saved! Owner will contact you soon.','green');
      e.target.reset();
      return false;
    }

    function showResult(msg,color){
      const el=document.getElementById('orderResult');
      el.innerHTML=`<div style="padding:10px;border-radius:8px;background:${color==='green'? '#e6ffef':'#ffeef0'};color:${color==='green'?'#0a6b3a':'#9b1c1c'}">${msg}</div>`;
    }

    function saveDraft(){
      const draft={
        name:document.getElementById('name').value,
        phone:document.getElementById('phone').value,
        address:document.getElementById('address').value,
        plan:document.getElementById('plan').value,
        date:document.getElementById('date').value,
        savedAt:new Date().toISOString()
      };
      localStorage.setItem('htc_draft',JSON.stringify(draft));
      showResult('Draft saved locally. You can continue later.','green');
    }

    window.addEventListener('DOMContentLoaded',()=>{
      const draft=JSON.parse(localStorage.getItem('htc_draft')||'null');
      if(draft){
        document.getElementById('name').value=draft.name||'';
        document.getElementById('phone').value=draft.phone||'';
        document.getElementById('address').value=draft.address||'';
        document.getElementById('plan').value=draft.plan||document.getElementById('plan').options[0].value;
        document.getElementById('date').value=draft.date||'';
      }

      // Hide preloader after load
      setTimeout(()=>{
        document.getElementById('preloader').classList.add('fade-out');
      },1200);
    });

    // Background slider script
    const slides=document.querySelectorAll('.bg-slider img');
    let current=0;
    setInterval(()=>{
      slides[current].classList.remove('active');
      current=(current+1)%slides.length;
      slides[current].classList.add('active');
    },5000);
  </script>
